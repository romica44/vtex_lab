  "rich-text": { 
    "props": { 
      "text": "Bienvenidos!",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "font": "t-heading-1"
    }
  },
  "modal-trigger#first": {
    "children": [
      "rich-text#trigger",
      "modal-layout#first"
    ]
  },
  "rich-text#trigger": {
    "props": {
      "text": "CIBERMONDAY",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "textColor": "white-90", 
      "backgroundColor": "danger", 
      "borderColor": "black-90", 
      "borderWidth": "2px", 
      "borderStyle": "solid", 
      "borderRadius": "8px", 
      "padding": "10px", 
      "font": "t-heading-5"
    }
  },
  "modal-layout#first": {
   "children": [
      "image#modal-image"
      // "promo-banner"
   ]
 },
 "image#modal-image": {
   "props": {
    "src": "https://resizer.iproimg.com/unsafe/1280x/filters:format(webp)/https://assets.iproup.com/assets/jpg/2021/10/23322.jpg",
    "alt": "Cibermonday Image",
    "style": {
      "width": "30%",
      "height": "30%"
    }
   }
 },
  "info-card#button-right": {
    "props": {
      "isFullModeStyle": false,
      "textPosition": "right",
      "imageUrl": "https://st2.depositphotos.com/1177973/7347/i/450/depositphotos_73478661-stock-photo-still-life-of-preparing-pasta.jpg",
      "headline": "Elaboración de Pastas Artesanales",
      "subhead": "Experimenta el sabor de la Pasta Italia de la mano de nuestas pastas caseras",
      "callToActionMode": "button",
      "callToActionText": "Ingresa aqui",
      "callToActionUrl": "/sale/pasta",
      "textAlignment": "center"
    }
  },
  "info-card#button-left": {
    "props": {
      "isFullModeStyle": false,
      "textPosition": "left",
      "imageUrl": "https://media.mondoconv.es/media/catalog/product/cache/9183606dc745a22d5039e6cdddceeb98/L/X/LX6T_1LVL.jpg",
      "headline": "Renová tu muebles de dormitorio",
      "subhead": "Poseemos una gran variedad de diseños para tu dormitorio",
      "callToActionMode": "button",
      "callToActionText": "Ingresa aqui",
      "callToActionUrl": "/sale/muebles",
      "textAlignment": "center"
    }
  }
  
