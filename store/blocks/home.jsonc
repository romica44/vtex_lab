{
  "store.home": { 
    "blocks": [
      "rich-text",
      "modal-trigger#first",
      "info-card#button-right",
      "info-card#button-left",
      "flex-layout",
      "flex-layout.row",
      "slider-layout#products",
       "promo-banner"
